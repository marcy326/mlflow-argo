name: mlflow-argo

conda_env: argo-workflows/conda_env.yaml

entry_points:
  main:
    command: "python mlflow-project/create_parent_run.py"
  preprocess:
    parameters:
      parent_run_id: {type: str}
    command: "python mlflow-project/preprocess.py --parent_run_id {parent_run_id}"
  train:
    parameters:
      parent_run_id: {type: str}
    command: "python mlflow-project/train.py --parent_run_id {parent_run_id}"
  evaluate:
    parameters:
      parent_run_id: {type: str}
    command: "python mlflow-project/evaluate.py --parent_run_id {parent_run_id}"
  deploy:
    parameters:
      parent_run_id: {type: str}
    command: "python mlflow-project/deploy.py --parent_run_id {parent_run_id}"
